<body class="remedy">
  <div class="add-new-remedy-page">
    <h1>What's your remedy?</h1>
    <%= form_for(@remedy) do |f| %>
      <% if @remedy.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@remedy.errors.count, "error") %> prohibited this remedy from being saved:</h2>

          <ul>
          <% @remedy.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="remedy-description-field">
        <%= f.label :description %><br>
        <%= f.text_area :description %>
      </div>

      <div class="twitter-field">
        <%= f.label :twitter_handle %><br>
        <%= f.text_field :twitter_handle %>
      </div>

      <div class="actions">
        <%= f.submit%>
      </div>

      <div class="home">
        <a href="/" title="Home"><i class="button fa fa-home fa-2x"></i></i>
      </div>

    <% end %>
  </div>
</body>
